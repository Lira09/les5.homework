<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/account"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/album"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_album_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/safari"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_explore_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account"/>
    <ImageView
        android:id="@+id/translator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_language_24"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account"/>
    <ImageView
        android:id="@+id/watch"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_watch_later_24"
        android:layout_marginTop="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account"/>



<ImageView
    android:id="@+id/steps"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_run_circle_24"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account"
        android:backgroundTint="@color/silver"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my albums "
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/silver"
        app:layout_constraintTop_toBottomOf="@+id/album"/>

    <Button
        android:id="@id/baseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safari"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/silver"
        app:layout_constraintTop_toBottomOf="@id/safari"

         />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translator "
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/silver"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/translator"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="steps"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/silver"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/steps"
         />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="watch"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/silver"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/watch"

        />





</androidx.constraintlayout.widget.ConstraintLayout>